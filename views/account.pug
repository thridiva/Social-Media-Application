                input.account-post-edit-label(type="text" value=`${post.name}` class=`title-${i+1}`) 
                
              .account-post-settings
                label(for="post-category") Category:
                input.account-post-edit-label(type="text" value=`${post.category}` class=`category-${i+1}`)
                
              .account-post-settings
